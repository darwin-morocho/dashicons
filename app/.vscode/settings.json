{
  "dart.lineLength": 100,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.g.dart": true,
    "**/*.freezed.dart": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll":"always",
    "source.organizeImports": "always"
  },
  "command-runner.commands": {
    "build runner": "flutter pub run build_runner build",
    "build runner -d": "flutter pub run build_runner build -d",
    "slang": "flutter pub run slang",
    "flutter pub get": "flutter pub get",
    "flutter clean": "flutter clean",
    "build web": "flutter build web --web-renderer html --release --dart-define-from-file=env.json",
    "deploy": "firebase deploy",
    "build web & deploy": "flutter build web --web-renderer html --release --dart-define-from-file=env.json && firebase deploy"
  },
  "dart.flutterSdkPath": ".fvm/flutter_sdk",
  // Remove .fvm files from search
  "search.exclude": {
    "**/.fvm": true
  },
  // Remove from file watching
  "files.watcherExclude": {
    "**/.fvm": true
  }
}
